<h4>Add a comment</h4>

<form class="form" role="form" {{action 'saveComment' model on="submit"}}> 
  <div class="form-group">
    <label for="{{selectedId}}">Author</label>
    {{input type="text" value=model.author required=true size="25"}}
  </div>
  <div class="form-group">
    <label for="{{selectedId}}">Message</label>
    {{textarea value=model.message cols="50" rows="5"}}
  </div>
  <div class="form-group">
    <button type="submit" class="btn">Add Comment</button>
    <button class="btn cancel" {{action 'cancelComment' model}}>Cancel</button> 
  </div>
</form>
